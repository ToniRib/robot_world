<form action="/robots/<%= @robot.id %>" method="post">

  <input type="hidden" name="_method" value="PUT">

  <p>Edit robot:</p>
  <input type='text' name='robot[name]' value="<%= @robot.name %>"/><br/>
  <input type='text' name='robot[city]' value="<%= @robot.city %>"/><br/>
  <input type='text' name='robot[state]' value="<%= @robot.state %>"/><br/>
  <input type='url' name='robot[avatar]' value="<%= @robot.avatar %>"/><br/>
  <input type='date' name='robot[birthdate]' value="<%= @robot.birthdate %>"/><br/>
  <input type='date' name='robot[hired_on]' value="<%= @robot.hired_on %>"/><br/>

  <% if @robot.department == 'service' %>
    <input type="radio" name="robot[department]" value="service" checked> Service
    <input type="radio" name="robot[department]" value="transportation"> Transportation
  <% else %>
    <input type="radio" name="robot[department]" value="service"> Service
    <input type="radio" name="robot[department]" value="transportation" checked> Transportation
  <% end %>

  <br>
  <input type='submit' value="Save Updates"/>
</form>
