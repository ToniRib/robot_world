<div class="container">
  <header class="row">
    <div class="col s12 m12 l12 center-align">
      <h1 class="cyan-text text-accent-2"><%= @robot.name %></h1>
    </div>
  </header>

    <div class="row">
      <div class="col s6 m6 l6">
        <div class="card blue-grey darken-1">
          <div id="robot-info" class="card-content white-text">
            <h4>Location: <%= @robot.city %>, <%= @robot.state %></h4>
            <h4>Birthdate: <%= @robot.birthdate %></h4>
            <h4>Hired On: <%= @robot.hired_on %></h4>
            <h4>Department: <%= @robot.department %></h4>
          </div>
          <div class="card-action">
            <a href="/robots/<%= @robot.id %>/edit">Edit Robot</a>
            <form action="/robots/<%= @robot.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE"/>
              <input class="hover-submit" type="submit" value="delete"/>
            </form>
          </div>
        </div>
      </div>

      <div class="col s6 m6 l6">
        <div class="card blue-grey darken-1">
          <div id="robot-img" class="card-content white-text center-align">
            <img src="<%= @robot.avatar %>" alt="robot" />
          </div>
        </div>
      </div>
    </div>
</div>
