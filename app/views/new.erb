<form action="/robots" method="post">
  <p>Enter a new robot:</p>
  <input type='text' name='robot[name]'/><br/>
  <input type='text' name='robot[city]'/><br/>
  <input type='text' name='robot[state]'/><br/>
  <input type='url' name='robot[avatar]'/><br/>
  <input type='date' name='robot[birthdate]'/><br/>
  <input type='date' name='robot[hired_on]'/><br/>
  <input type="radio" name="robot[department]" value="service" checked> Service
  <input type="radio" name="robot[department]" value="transportation"> Transportation
  <input type='submit'/>
</form>
